<form class="needs-validation p-3 bg-white rounded shadow-sm" data-id="<%=sessionID%>" action="/<%=slug%>/confirmar/<%=sessionID%>"  method="post" id="payment-form">
    <div class="row">
      <div class="col-md-6 mb-3">
        <input type="text" class="form-control" id="name" name="name" placeholder="Nombre" required>
        <span id="error" class="help-block"></span>
      </div>
      <div class="col-md-6 mb-3">
        <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Apellido" required>
        <span id="error" class="help-block"></span>
      </div>
    </div>

    <div class="row">
        <div class="col-md-8 mb-3">
          <input type="text" class="form-control" id="email" name="email" placeholder="Correo electronico" required>
          <span id="error" class="help-block"></span>
        </div>
        <div class="col-md-4 mb-3">
          <input type="number" class="form-control" id="phone" name="phone" placeholder="Numero de telefono" required>
          <span id="error" class="help-block"></span>
        </div>
    </div>
    <div class="row">
      <div class="col-md-10 mb-3">
        <input type="text" class="form-control" id="address" name="address" placeholder="Dirrecion" required>
        <span id="error" class="help-block"></span>
      </div>
      <div class="col-md-2 mb-3">
        <input type="number" class="form-control" id="num" name="num" placeholder="Nª" required>
        <span id="error" class="help-block"></span>
      </div>   
    </div>
    <textarea name="observaciones" class="form-control"  cols="30" rows="4">¿Necesitas algo especial?</textarea><br>
    <select name="envio"  class="form-control" id="formadepago">
      <option value="false">Recogida en el restaurante</option>
      <option value="true">Envio a domicilio</option>
    </select><br>
    <div id="pago">
          <div class="form-row">
            <label for="card-element">
              Pago online
            </label>
            <div id="card-element">
              <!-- A Stripe Element will be inserted here. -->
            </div>
        
            <!-- Used to display form errors. -->
            <div id="card-errors" class="alert alert-danger" role="alert"></div>
          </div>
          <input type="text" name="id" style="display: none;" value="<%=sessionID%>">
    </div>
    <button class="btn btn-primary btn-lg btn-block" id="button" type="submit">Confirmar pedido</button>
  </form>